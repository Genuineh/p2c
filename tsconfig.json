{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "outDir": "dist",
    "module": "ESNext",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "allowJs": true,
    "baseUrl": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": [
      "@pixso/plugin-typings"
    ],
    "jsx": "react-jsx"
  },
  "include": ["main.ts", "host.ts", "src/**/*", "ui/**/*"],
  "exclude": ["node_modules", "dist"]
}
