{
  "name": "pixso-codeforge",
  "version": "0.1.0",
  "description": "Pixso CodeForge - 国内最强多端代码生成插件，支持 Flutter / SwiftUI / Jetpack Compose / React / Vue 3 / 微信小程序",
  "scripts": {
    "dev": "plugin-cli dev",
    "build": "plugin-cli build",
    "pkg": "plugin-cli pkg",
    "lint": "eslint . --ext .ts,.tsx --ignore-pattern node_modules --ignore-pattern dist",
    "lint:fix": "eslint . --ext .ts,.tsx --ignore-pattern node_modules --ignore-pattern dist --fix",
    "format": "prettier --write \"./**/*.{ts,tsx,html,css}\" --ignore-path .gitignore",
    "format:check": "prettier --check \"./**/*.{ts,tsx,html,css}\" --ignore-path .gitignore",
    "prepare": "husky",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "pixso",
    "plugin",
    "code-generation",
    "flutter",
    "swiftui",
    "jetpack-compose",
    "react",
    "vue3",
    "weapp",
    "design-to-code"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@pixso/plugin-cli": "^1.0.8",
    "@pixso/plugin-typings": "^0.8.0",
    "@types/node": "^20.11.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.0",
    "typescript": "^5.3.0",
    "webpack-hot-middleware": "2.25.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,html,css}": [
      "prettier --write"
    ]
  }
}
